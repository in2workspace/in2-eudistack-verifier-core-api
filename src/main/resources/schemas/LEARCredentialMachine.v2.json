{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LEARCredentialMachine V2",
  "type": "object",
  "required": ["@context", "type", "issuer", "credentialSubject"],
  "additionalProperties": true,
  "properties": {
    "@context": {
      "type": "array",
      "items": { "type": "string" }
    },
    "id": { "type": "string" },
    "type": {
      "type": "array",
      "items": { "type": "string" },
      "contains": { "const": "LEARCredentialMachine" }
    },
    "issuer": {
      "type": "object",
      "required": ["id"],
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string" }
      }
    },
    "credentialSubject": {
      "type": "object",
      "required": ["mandate"],
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string" },
        "mandate": {
          "type": "object",
          "required": ["mandatee", "mandator", "power"],
          "additionalProperties": true,
          "properties": {
            "mandatee": {
              "type": "object",
              "required": ["id"],
              "additionalProperties": true,
              "properties": {
                "id": { "type": "string" },
                "domain": { "type": "string" },
                "ipAddress": { "type": "string" }
              }
            },
            "mandator": {
              "type": "object",
              "required": ["organizationIdentifier"],
              "additionalProperties": true,
              "properties": {
                "id": { "type": "string" },
                "commonName": { "type": "string" },
                "country": { "type": "string" },
                "email": { "type": "string" },
                "organization": { "type": "string" },
                "organizationIdentifier": { "type": "string" },
                "serialNumber": { "type": "string" }
              }
            },
            "power": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "action": {},
                  "domain": { "type": "string" },
                  "function": { "type": "string" },
                  "type": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "validFrom": { "type": "string" },
    "validUntil": { "type": "string" },
    "expirationDate": { "type": "string" },
    "issuanceDate": { "type": "string" }
  }
}
